<div class="container">
<h1>Review for: <%= @review.location.name %></h1>

<div class="row">
    <%= form_for @review do |f| %>
        <div>
            <%= f.label :rating %>
            <%= f.text_field :rating %>
        </div>
        <div>
            <%= f.label :comment %>
            <%= f.text_area :comment %>
        </div>
    
        <%= f.submit "Edit review for #{@review.location.name}", class: "waves-effect waves-teal btn" %>

    <% end %>

    <br>
    <%= link_to "Delete", review_path(@review), method: :delete, data: { confirm: "Are you sure? " }, class: "waves-effect waves-teal btn" %>
    <br><br>
    <%= link_to "Back", location_path(@review.location.id), class: "waves-effect waves-teal btn" %>
</div>
</div>  
