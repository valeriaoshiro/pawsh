<div class="container">
<h1>Create a new location</h1>

<div class="row">
<%= form_for @location do |f| %>
  
        <div>
            <%= f.label :name %>
            <%= f.text_field :name %>
        </div>
    
    
    
    <div>
        <%= f.label :address %>
        <%= f.text_field :address %>
    </div>
    <div>
        <%= f.label :phone %>
        <%= f.text_field :phone %>
    </div>
    <div>
        <%= f.label :description %>
        <%= f.text_field :description %>
    </div>
    <%= f.submit "Create a new location", class: "waves-effect waves-teal btn" %>

<% end %>
</div>

<%= link_to "Back", locations_path, class: "waves-effect waves-teal btn" %>
</div>